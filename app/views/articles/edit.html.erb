<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= simple_form_for([@board, @article]) do |f| %>
        <%= f.input :title %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}  %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>