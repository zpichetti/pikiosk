<meta http-equiv="refresh" content="300" />

<div class="page">
  <div id="time"></div>
  <div class="row">
    <div class="col-md-9 main">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-interval="10000">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/1600x900/?nature,water')">
            <div class="carousel-caption d-none d-md-block">
              <h5>First slide label</h5>
            </div>
          </div>
          <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/1600x900/?nature,water')">
            <div class="carousel-caption d-none d-md-block">
              <h5>Second slide label</h5>
            </div>
          </div>
          <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/1600x900/?nature,water')">
            <div class="carousel-caption d-none d-md-block">
              <h5>Third slide label</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 calendars">
      <h3 class="text-center">Calendrier</h3>
      <div class="row cal">
        <div class="col calendar">
          <div class="calendar-date text-center">
            <p>12 septembre</p>
            <p>09h00</p>
            <p>Strasbourg</p>
            <p>ERE 07</p>
          </div>
          <div class="calendar-content">
            Matinal de l'innovation
          </div>
        </div>
        <div class="col calendar">
          <div class="calendar-date text-center">
            <p>23 Décembre</p>
            <p>09h00</p>
            <p>Lille</p>
            <p>ERE 07</p>
          </div>
          <div class="calendar-content">
            Matinal de l'innovation
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="news" class="col-md-9 news">
      <img id="news-img" class="img-fluid" src="" alt="">
      <div class="news-content">
        <h3 id="title">...</h3>
        <p id="description">...</p>
      </div>
    </div>
    <div class="col-md-3 meteo">
      <div class="row">
        <div class="col-md-4 text-center">
          <div class="meteo-today"><i class="fas fa-sun"></i> <%=  @meteo[0]["main"]["temp"].to_f.round %>°</div>
          <p>Aujourd'hui</p>
        </div>
        <div class="col-md-4 text-center">
          <div class="meteo-today"><i class="fas fa-sun"></i> <%=  @meteo[1]["main"]["temp"].to_f.round %>°</div>
          <p>3h</p>
        </div>
        <div class="col-md-4 text-center">
          <div class="meteo-today"><i class="fas fa-sun"></i> <%=  @meteo[2]["main"]["temp"].to_f.round %>°</div>
          <p>demain</p>
        </div>
      </div>
    </div>
  </div>
</div>