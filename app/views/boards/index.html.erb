<div class="container">
  <h1>Les boards</h1>
  <%= link_to 'Add', new_board_path, class: "btn btn-primary" %>
  
  
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">News</th>
        <th scope="col">Calendar</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each_with_index do |board, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to board.name , board_path(board.link) %></td>
          <td><%= link_to "News", board_articles_path(board)  %>(<%=board.articles.size %>)</td>  
          <td><%= link_to "Calendars", board_calendars_path(board) %>(<%=board.calendars.size %>)</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>