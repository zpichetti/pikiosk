<div class="container">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titre</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">City</th>
        <th scope="col"><i class="far fa-trash-alt"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @calendars.each_with_index do |calendar, index| %>
        <tr class="<%= "table-dark" if calendar.date < Time.now %>">
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to calendar.title ,edit_board_calendar_path(@board,calendar) %></td>
          <td><%= calendar.date.localtime.strftime('%H:%M %d-%m-%Y') %></td>  
          <td><%= calendar.location %></td>
          <td><%= calendar.city %></td>
          <td>
            <%= link_to board_calendar_path(@board,calendar),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
                <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add', new_board_calendar_path(@board), class: "btn btn-primary" %>
</div>
