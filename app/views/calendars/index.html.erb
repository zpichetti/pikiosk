<div class="container">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titre</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">City</th>
        <th scope="col"><i class="far fa-trash-alt"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @calendars.each_with_index do |calendar, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to calendar.title ,edit_board_calendar_path(@board,calendar) %></td>
          <td><%= calendar.date.strftime('%H:%M %d-%m-%y') %></td>  
          <td><%= calendar.location %></td>
          <td><%= calendar.city %></td>
          <td><i class="far fa-trash-alt"></i></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add', new_board_calendar_path(@board), class: "btn btn-primary" %>
</div>
