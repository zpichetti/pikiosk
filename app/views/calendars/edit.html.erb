<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= simple_form_for([@board, @calendar]) do |f| %>
        <%= f.input :title %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datetimepicker"}  %>
        <%= f.input :location %>
        <%= f.input :city %>
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>